/* pages/codelogin/codelogin.wxss */

page {
  background: #f0f3f4;
}

.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.login .login_ipt {
  display: flex;
  align-items: center;
  background: #fff;
  height: 90rpx;
  width: 690rpx;
  position: relative;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.login .login_ipt image {
  height: 26rpx;
  width: 26rpx;
  position: absolute;
  right: 215rpx;
}

.login .login_ipt .line {
  height: 61rpx;
  width: 2rpx;
  background: #eee;
  position: absolute;
  right: 192rpx;
}

.login .login_ipt .ipt {
  width: 390rpx;
  box-sizing: border-box;
  padding-left: 32rpx;
  font: 30rpx "";
  color: #333;
}

.login .login_ipt .txt {
  font: 24rpx "";
  color: #333;
  position: absolute;
  right: 27rpx;
}

.input {
  width: 690rpx;
  box-sizing: border-box;
  padding-left: 32rpx;
  font: 30rpx "";
  color: #333;
  background: #fff;
  height: 90rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.tip {
  font: 24rpx "";
  color: #666;
  margin: 0 0 61rpx 35rpx;
}

.btn {
  width: 630rpx;
  height: 90rpx;
  font: 32rpx/90rpx "";
  color: #fff;
  text-align: center;
  background: #dadada;
  margin: 0 auto;
}
